# Sea Level Monitoring System - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===== DATABASE CONFIGURATION =====
DB_URI=postgresql://username:password@localhost:5432/sealevel_monitoring
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ===== CACHE CONFIGURATION =====
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# ===== API CONFIGURATION =====
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000"]

# ===== SECURITY =====
SECRET_KEY=your-super-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== EXTERNAL SERVICES =====
IMS_FORECAST_URL=https://ims.gov.il/sites/default/files/ims_data/xml_files/isr_sea.xml
WEATHER_API_KEY=your-weather-api-key-if-needed

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FILE=app.log

# ===== DEVELOPMENT FLAGS =====
DEBUG=true
DEVELOPMENT_MODE=true

# ===== FRONTEND CONFIGURATION =====
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws

# ===== MAP CONFIGURATION =====
REACT_APP_MAP_TILES_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
GOVMAP_TOKEN=11aa3021-4ae0-4771-8ae0-df75e73fe73e

# ===== FEATURE FLAGS =====
REACT_APP_ENABLE_PREDICTIONS=true
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_ALERTS=true